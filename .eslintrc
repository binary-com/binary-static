{
    'parser': 'babel-eslint',
    'env': {
        'es6':     true,
        'browser': true,
        'amd':     true,
        'mocha':   true,
        'jquery':  true,
    },
    'globals': {
        'jQuery':  false,
        '$':       false,
        'require': false,
        'module':  false,
        'global':  false,

        'dataLayer':       true,

        'texts_json':      false,

        // from binary style
        'tabListener': true,
    },
    'rules': {
        'array-callback-return': 0,
        'func-names':            ['error', 'never'],
        'no-param-reassign':     ['error', { props: false }],
        'one-var':               ['error', { initialized: 'never', uninitialized: 'always' }],
        'semi':                  ['error', 'always'],
        'camelcase':             0,
    },
    'extends': [
        'airbnb-base',
        'binary',
    ],
}
