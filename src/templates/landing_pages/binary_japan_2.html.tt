                        image_1='higher-lower-1' image_2='higher-lower-2'
                        header=l('{JAPAN ONLY}Ladder Options')
                        description=l("{JAPAN ONLY}Predict whether a FX rate will finish higher or lower than a target barrier.")
                        duration=l("{JAPAN ONLY}2 hours to 1 year terms") %]

                    [% PROCESS product icon_1='ic-3' icon_2='ic-4'
                        image_1='touch-notouch-1' image_2='touch-notouch-2'
                        header=l('{JAPAN ONLY}Touch Options')
                        description=l("{JAPAN ONLY}Predict whether a FX rate will touch a target barrier or not.")
                        duration=l("{JAPAN ONLY}1 week to 1 year terms") %]

                    [% PROCESS product icon_1='ic-5' icon_2='ic-6'
                        image_1='in-out-1' image_2='in-out-2'
                        header=l('{JAPAN ONLY}Range Options: End-In / End-Out')
                        description=l("{JAPANY ONLY}Predict whether a FX rate will end inside or outside a certain range.")
                        duration=l("{JAPAN ONLY}1 week to 1 year terms") %]

                    [% PROCESS product icon_1='ic-1' icon_2='ic-2'
                        image_1='in-out-3' image_2='in-out-4'
                        header=l('{JAPAN ONLY}Range Options: Stay-In / Break-Out')
