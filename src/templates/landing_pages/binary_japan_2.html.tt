                                <span class="size-3">[% l("{JAPAN ONLY}¥110.50 / lot") %]</span>
                            </div>
                            <div class="box">
                                <img class="icon-sm" src="[% request.url_for('images/japan/version1/clock.svg') %]" />
                                <span class="size-3">[% l("{JAPAN ONLY}1 hour") %]</span>
